#!/bin/bash

BUILD_DIR=$1

VENDOR_DIR=$BUILD_DIR/vendor

POPPLER_DATA_HOME=$VENDOR_DIR/poppler-data
POPPLER_DATA_DIR=$VENDOR_DIR/poppler-data-0.4.9

POPPLER_HOME=$VENDOR_DIR/poppler
POPPLER_DIR=$VENDOR_DIR/poppler-0.83.0/

echo "-----> DIR START"
dir
echo "-----> DIR END"

echo "-----> ls START"
ls -l
echo "-----> ls END"

echo "-----> START"

cd $VENDOR_DIR
echo "Installing poppler data"

tar -xvzf ./poppler-data-0.4.9.tar.gz
cd $POPPLER_DATA_DIR
make
make install

cd $VENDOR_DIR

echo "Installing poppler"
tar -xf ./poppler-0.83.0.tar.xz
cd $POPPLER_DIR
./configure
make
make install

echo "-----> DONE"
